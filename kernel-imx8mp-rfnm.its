/dts-v1/;

/ {
	description = "Image file for the imx8mp-rfnm Linux Kernel";
	#address-cells = <1>;

	images {
		kernel {
			description = "ARM64 Linux kernel";
			data = /incbin/("./arch/arm64/boot/Image.gz");
			type = "kernel";
			arch = "arm64";
			os = "linux";
			compression = "gzip";
			load = <0x40400000>;
			entry = <0x40400000>;
		};
		fdt {
			description = "Flattened Device Tree blob";
			data = /incbin/("./arch/arm64/boot/dts/freescale/imx8mp-rfnm.dtb");

			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
		};
		ramdisk {
			description = "imx8mp-rfnm Ramdisk";
                        data = /incbin/("./core-image-minimal-dev-imx8mp-rfnm.cpio.gz");
			type = "ramdisk";
			arch = "arm64";
			os = "linux";
			compression = "gzip";
		};
	};

	configurations {
		default = "config-1";
		config-1 {
			description = "Boot Linux kernel";
			kernel = "kernel";
			fdt = "fdt";
			ramdisk = "ramdisk";
		};
	};
};
